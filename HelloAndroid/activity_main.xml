<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.helloandroid.MainActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/skill"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src= "@drawable/skill"
        android:scaleY="1.5"
        android:scaleX="1.2"
        android:padding="0dp"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src= "@drawable/logo1"
        />

    <ImageView
        android:id="@+id/img_loc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/location"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/skill"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/address"
        android:textColor="#37474F"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/skill"
        android:layout_toRightOf="@id/img_loc" />

    <ImageView
        android:id="@+id/img_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/img_loc"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ph_no"
        android:textColor="#37474F"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:layout_toRightOf="@id/img_ph"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/text2"/>

    <ImageView
        android:id="@+id/img_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/web"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/img_ph"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="@string/website"
        android:autoLink="web"
        android:textColor="#37474F"
        android:layout_toRightOf="@id/img_web"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/text3"/>
</RelativeLayout>
